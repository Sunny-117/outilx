{
  "source": {
    "include": ["src/core"],
    "includePattern": ".+\\.ts$"
  },
  "plugins": [
    "node_modules/better-docs/typescript"
  ],
  "opts": {
    "destination": "docs",
    "recurse": true,
    "readme": "README.md"
  },
  "templates": {
    "better-docs": {
      "name": "outilx Documentation"
    }
  }
} 